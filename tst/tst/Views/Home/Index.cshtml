@{
    ViewBag.Title = "all users from the database";
}
<div>
    <h3>all data about Users</h3>
    <table>
        <tr>
            <td><p>Id</p></td>
            <td><p>Name</p></td>
            <td><p>Age</p></td>
            <td></td>
        </tr>
        @foreach(var user in ViewBag.Users)
        {
            <tr>
                <td><p>@user.Id</p></td>
                <td><p>@user.Name</p></td>
                <td><p>@user.Age</p></td>
                <td><p><a href="/Home/Add/">add user</a></p></td>
                <td><p><a href="/Home/Del/">delete user</a></p></td>
            </tr>
        }
    </table>
</div>